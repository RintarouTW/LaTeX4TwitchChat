{
  "name": "LaTeX for TwitchChat Extension",
  "version": "1.0",
  "description": "Support LaTeX in Twitch Chat",
  
  "permissions": ["https://*.twitch.tv/*"],

  "content_scripts": [
    {
      "matches": ["https://*.twitch.tv/*"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["loader.js"]
    }
  ],

  "web_accessible_resources": ["latex4twitch.js", "common.js", "graph.js", "matrix.js", "show_image.js", "code.js", "calc.js"],

  "icons": {
      "16": "images/logo-16.png",
      "32": "images/logo-32.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png"
  },
  
  "manifest_version": 2
}
